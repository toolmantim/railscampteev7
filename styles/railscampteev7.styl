@import "reset"
@import "fonts"

$intro-duration = 60

time(percent)
  '%ss' % ($intro-duration * percent)

html, body
  height 100%

html
  background -webkit-gradient(linear, left top, left bottom, color-stop(0, #00162f), color-stop(1, #004763)) no-repeat

body
  overflow hidden

.scene
  position absolute
  top 0
  left 0
  background-image url('/images/sky1.png')
  background-position 1% 0
  width 200%
  height 200%
  -webkit-animation zoomie time(.67) 1 linear forwards
  z-index 1
  &:before
    background-image url('/images/sky2.png')
    background-position 1% 0
    height 100%
    width 100%
    content ' '
    display block
    opacity .8
  &:after
    background-image url('/images/sky3.png')
    background-position 1.4% 0
    height 100%
    width 100%
    content ' '
    display block
    position absolute
    top 0
    left 0
    opacity .5
  .scene-inner
    background-image url('/images/sky4.png')
    background-position 1.4% 0
    height 100%
    width 100%
    position absolute
    top 0
    left 0a

.ground
  width 100%
  height 150px
  background-color green
  position absolute
  bottom 0
  z-index 4
  
  .dinos
    width 510px
    height 325px
    background transparent url('/images/dinos.png') no-repeat
    position absolute
    left 5%
    bottom 50px
    -webkit-animation jumping 300ms infinite
  
.words
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  color white
  font-family $strangelove
  > *
    display block
    position absolute
    text-align center
    top 45%
    left -1%
    height 100%
    width 100%
    z-index 4
  .sponsor
    opacity 0
    -webkit-animation sponsor time(1) 1 linear forwards
    -webkit-transform rotate(2deg)
    font-size 110px
  .us
    opacity 0
    -webkit-animation us time(1) 1 linear forwards
    -webkit-transform rotate(2deg)
    font-size 90px
    font-size 120px
  .title
    top 35%
    opacity 0
    -webkit-animation title time(1) 1 linear forwards
    font 220px $killerelephant
    em
      font normal 160px $strangelove
      margin-right -0.2em
      position relative
      top -0.28em
    .a
      letter-spacing 10px
    .l
      letter-spacing -30px
    
.comet-outer
  position absolute
  width 100%
  height 100%
  z-index 3
  -webkit-transform translateY(150%) translateX(-80%)
  -webkit-animation comet time(.01) time(.65) 1 linear
  .comet
    width 174px
    height 184px
    background transparent url('/images/comet.png') no-repeat
    position absolute
    bottom 100%
    left 80%
    z-index 3

.boom
  position absolute
  width 100%
  height 100%
  z-index 5
  background-color white
  -webkit-animation boom time(.003) time(.66) 1 linear forwards
  opacity 0

@keyframes zoomie
  from
    -webkit-transform translateZ(0) translateX(-25%) translateY(-25%) scale(1) rotate(-13deg)
  to
    -webkit-transform translateZ(0) translateX(-25%) translateY(-25%) scale(.5) rotate(0)
    
@keyframes sponsor
  0%
    opacity 0
  1%
    opacity 0
  5%
    opacity 1
  13%
    opacity 1
  14%
    opacity 0
  100%
    opacity 0

@keyframes us
  0%
    opacity 0
  17%
    opacity 0
  21%
    opacity 1
  29%
    opacity 1
  34%
    opacity 0
  100%
    opacity 0

@keyframes title
  0%
    opacity 0
  50%
    opacity 0
  52%
    opacity 1
  100%
    opacity 1

@keyframes jumping
  0%
    -webkit-transform translateY(0)
    -webkit-animation-timing-function ease-in
  50%
    -webkit-transform translateY(20px)
    -webkit-animation-timing-function ease-out
  100%
    -webkit-transform translateY(0)

@keyframes boom
  0%
    opacity 0
  100%
    opacity 1

@keyframes comet
  from
    -webkit-transform translateY(0) translateX(0)
  to
    -webkit-transform translateY(150%) translateX(-80%)