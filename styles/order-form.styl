$cyan = #00c0ff

#order-form
  color white
  width 768px
  margin 50px auto
  border 2px solid $cyan
  border-radius 50px
  background-color rgba(0,0,0,.3)
  box-shadow 0 0 25px $cyan
  font-family $din-rounded
  text-align center
  
  a
    color #bce1ed
    text-decoration none
    &:hover
      color #72dcff
    &:active
      color #00c0ff

  > header
    padding-top 50px
    padding-bottom 40px
    border-bottom 2px solid $cyan
    h1
      font 60px $killerelephant
      line-height 1
      position relative
      display inline-block
      .a
        letter-spacing 10px
      .l
        letter-spacing -30px
      &:after
        content ' '
        background transparent url('/images/comet.png') 0 0 no-repeat
        background-size 64px 68px
        width 64px
        height 68px
        position absolute
        top -25px
        right -85px
    h2
      margin-top 15px
      font-size 16px
    
  > .airlock
    height 390px
    position relative
    &.unlocked
      .gate
        form
          transition all 200ms
          transform scale(1, 0)
        .top-door, .bottom-door
          transition height 600ms 180ms
          height 0%
      .form
        form
          transform scale(1,1)
          transition all 150ms
          transition-delay 1s
        
    .gate
      width 100%
      height 100%
      position absolute
      .top-door, .bottom-door
        position absolute
        left 0
        height 50%
        width 100%
        background-color rgba($cyan, 0.3)
        z-index 1
      .top-door
        top -1px
        border-bottom 1px solid $cyan
      .bottom-door
        border-top 1px solid $cyan
        bottom -1px
      form
        position relative
        top 173px
        width 200px
        height 44px
        margin 0 auto
        z-index 2
        input, label
          position absolute
          top 0
          left 0
          width 100%
          text-align center
          padding 5px 10px
          font-size 18px
          z-index 1
        label
          position absolute
          top 10px
          left 0
          z-index 2
          text-transform uppercase
          line-height 1
          opacity 1
          transition all 75ms
          &.hidden
            transform scale(0,1)
            opacity 0
      h2
        offscreen()
    .form
      position absolute
      background-image -webkit-gradient(linear, 0 0, 0 100%, color-stop(.5, rgba(255,255,255,.1)), color-stop(.5, transparent), to(transparent))
      background-size 4px 4px
      height 100%
      width 100%
      form
        position absolute
        top 80px
        left 95px
        width 580px
        height 220px
        background-color rgba(0,0,0,.2)
        border 2px solid #134869
        box-shadow 0 0 25px rgba($cyan, .25)
        transform scale(1,0)
        border-radius 20px
      
  > footer
    border-top 2px solid $cyan
    margin-left auto
    margin-right auto
    padding-left 30px
    padding-right 30px
    padding-top 40px
    padding-bottom 50px
    text-transform uppercase
    section
      display inline-block
      width 30%
      h1
        font-size 11px
        margin-bottom 5px
      p
        font-size 18px