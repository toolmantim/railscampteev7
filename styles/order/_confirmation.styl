#order > .airlock > .confirmation
  position absolute
  height 100%
  width 100%
  color $cyan
  text-shadow 0 0 15px rgba($cyan, .7)
  text-transform uppercase
  text-align left
  line-height 1.3
  transform scale(1,0)
  transition all 100ms
  &.visible
    transform scale(1,1)
  > *
    position absolute
  hgroup, p
    left 50px
  hgroup
    top 40px
    h1
      font-size 22px
    h2
      font-size 18px
      color white
      margin-left 3px
  p
    top 310px
    font-size 12px
    width 22em
  .tee-1, .tee-2
    bottom 0
    right 40px
    width 404px
    height 344px
    background transparent url('/images/tee.png') no-repeat
    -webkit-mask-image -webkit-gradient(linear, 0 0, 0 100%, color-stop(.5, white), color-stop(.5, transparent), to(transparent))
    -webkit-mask-size 4px 4px
    -webkit-animation-iteration-count infinite
    -webkit-animation-timing-function linear
  .tee-1
    -webkit-animation-name fuzzy-transmission-1
    -webkit-animation-duration 3.7s
    -webkit-animation-delay 1.1s
  .tee-2
    -webkit-mask-position-y: 2px
    -webkit-animation-name fuzzy-transmission-2
    -webkit-animation-duration 3.1s
    -webkit-animation-delay 2.9s

@keyframes fuzzy-transmission-1
  0%
    -webkit-transform translateX(0)
  5%
    -webkit-transform translateX(-2px)
  7%
    -webkit-transform translateX(-2px)
  38%
    -webkit-transform translateX(2px)
  40%
    -webkit-transform translateX(2px)
  100%
    -webkit-transform translateX(0)

@keyframes fuzzy-transmission-2
  0%
    -webkit-transform translateX(0)
  5%
    -webkit-transform translateX(-3px)
  7%
    -webkit-transform translateX(-3px)
  38%
    -webkit-transform translateX(3px)
  40%
    -webkit-transform translateX(3px)
  100%
    -webkit-transform translateX(0)