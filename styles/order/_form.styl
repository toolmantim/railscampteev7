#order > .airlock > .form
  position absolute
  background-image -webkit-gradient(linear, 0 0, 0 100%, color-stop(.33, rgba($cyan,.13)), color-stop(.33, transparent), to(transparent))
  background-size 3px 3px
  height 100%
  width 100%
  &.visible
    form
      transform translateZ(0) scale(1,1)
      opacity 1
  form
    position absolute
    top 60px
    left 95px
    width 540px
    height 230px
    background-color rgba($cyan,.3)
    border 1px solid $cyan
    box-shadow 0 0 15px rgba($cyan, .3)
    transform translateZ(0) scale(1,0)
    border-radius 20px
    padding 18px 20px 0 20px
    text-align left
    opacity .5
    transition all 180ms ease-in
    header
      text-transform uppercase
      font-size 12px
      color $cyan
      text-align left
      .status
        float right
    fieldset
      text-align left
      &.cut, &.size, &.personal label
        position relative
        display inline-block
      &.cut, &.size
        margin-top 10px
        margin-bottom 15px
        display inline-block
        h2
          offscreen()
        label
          overflow hidden
          display block
          float left
          & + label
            margin-left -2px
          &:first-of-type span
            border-top-left-radius 5px
            border-bottom-left-radius 5px
          &:last-of-type span
            border-top-right-radius 5px
            border-bottom-right-radius 5px
          input
            opacity 0
            position absolute
            z-index -1
            &:checked + span
              background-color $input-background-color-active
            &:disabled + span
              opacity .4
          span
            height 76px
            width 62px
            overflow hidden
            display block
            border 2px solid $cyan
            background-color $input-background-color
            transition opacity 100ms
      &.cut
        label
          span
            background $input-background-color url('/images/cut-icons.png') 0 0 no-repeat
            text-indent -1000px
          input[value='f'] + span
            background-position 22px -82px
          input[value='m'] + span
            background-position 22px 18px
      &.size
        margin-left 19px
        label
          span
            line-height 76px
            text-align center
            color white
            font-size 14px
      &.personal
        h2
          offscreen()
        input
          width 240px
          transition opacity 100ms
          &[name='name']
            margin-right 15px
          &:disabled
            opacity .4
            color white
            -webkit-text-fill-color white
      &.submit
        input
          position absolute
          margin 0
          padding 15px 0
          left -1px
          bottom -1px
          border 2px solid $cyan
          background $input-background-color
          font 18px $din-rounded
          border-radius 5px
          color white
          line-height 1
          text-transform uppercase
          text-align center
          width 582px
          border-radius 0
          border-bottom-left-radius 20px
          border-bottom-right-radius 20px
          cursor pointer
          transition opacity 200ms
          &:disabled
            opacity .4
            cursor default